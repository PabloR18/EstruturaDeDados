import java.util.Scanner;
import java.util.Locale;
public class DesafioNotas {

	public static void main(String[] args) {
		
		Locale.setDefault(Locale.US);
		Scanner entrada = new Scanner(System.in);
		
		int quantNotas;
		double media = 0.0;
		
		System.out.println("Informe quantas Notas deseja Calcular: ");
		quantNotas = entrada.nextInt();
				
		double notas[] = new double[quantNotas];
		
		for (int i = 0; i < notas.length; i++) {	
			System.out.printf("Informe a %dÂ° Nota: ", i +1);
			notas[i] = entrada.nextDouble();
			media = media + notas[i] / 2;
		}
		
		System.out.printf("Media: "+"%.2f%n", media);
		
		entrada.close();
	}
}
